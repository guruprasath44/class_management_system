    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">My Profile</h1>
            </div><!-- /.col -->
            <% if(success!='' ){%>
              <div class="alert alert-success alert-dismissible col-5">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <%= success %>
              </div>
              <%}%>
                <div class="col-sm-6">
                  <ol class="breadcrumb float-sm-right">
                    <!-- <li class="breadcrumb-item"><a href="#">Home</a></li> -->
                    <li class="breadcrumb-item ">Dashboard</li>
                    <li class="breadcrumb-item ">Edit</li>
                    <li class="breadcrumb-item active">My Profile</li>
                  </ol>
                </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->

      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-4">

              <!-- Profile Image -->
              <div class="card card-primary card-outline">
                <div class="card-body box-profile">
                  <div class="text-center">
                    <img class="profile-user-img img-fluid img-circle" src="../../dist/img/user-128x128.jpg"
                      alt="User profile picture" onerror=this.src="/img/default_pic.jpg">
                  </div>
                  <% if(userData.length!=0){%>

                    <%userData.forEach(function(data){%>

                      <h3 class="profile-username text-center">
                        <%=data.firstname %>
                          <%=data.lastname%>
                      </h3>

                      <p class="text-muted text-center">Assistant Professor</p>

                      <ul class="list-group list-group-unbordered mb-3">
                        <li class="list-group-item">
                          <b>Department</b> <a class="float-right">Information Technology</a>
                        </li>
                        <li class="list-group-item">
                          <b>Email</b> <a class="float-right">
                            <%=data.email %>
                          </a>
                        </li>
                        <li class="list-group-item">
                          <b>Phone no.</b> <a class="float-right">
                            <%=data.mobileno %>
                          </a>
                        </li>
                      </ul>

                      <a href="/admin/faculty_profile" class="btn btn-primary btn-block"><b>MyProfile</b></a>
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->

              <!-- About Me Box -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">About Me</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                  <strong><i class="fas fa-pencil-alt mr-1"></i> DOB</strong>
                  <% var datemonth=data.dob.getMonth()+1 %>
                    <p class="text-muted">
                      <%=data.dob.getDate()+"-"+datemonth+"-"+ data.dob.getFullYear()%>
                    </p>
                    <hr>

                    <strong><i class="fas fa-map-marker-alt mr-1"></i>Address</strong>

                    <p class="text-muted">
                      <%=data.address %><br>
                        <%=data.city %><br>
                          <%=data.state %>
                    </p>


                    <hr>

                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>

            <!-- /.col -->
            <div class="col-md-8">
              <div class="card">
                <div class="card-header p-2">
                  <ul class="nav nav-pills">

                    <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Edit</a></li>
                  </ul>
                </div><!-- /.card-header -->
                <div class="card-body">
                  <div class="tab-content">
                    <div class="active tab-pane" id="activity">
                      <!-- Post -->

                      <!-- /.tab-pane -->

                      <div class="tab-pane" id="settings">
                        <form action="/admin/update" method="POST" validate form-horizontal>
                          <div class="form-group row">
                            <label for="inputName" class="col-sm-2 col-form-label">First Name</label>
                            <div class="col-sm-4">
                              <input type="text" class="form-control" name="fname" id="inputName"
                                value=<%=data.firstname %> required>
                            </div>
                            <label for="inputName" class="col-sm-2 col-form-label">Last Name</label>
                            <div class="col-sm-4">
                              <input type="text" class="form-control" name="lname" id="inputName" value=<%=data.lastname
                                %> required>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label for="inputEmail" class="col-sm-2 col-form-label">Department</label>
                            <div class="col-sm-4">
                              <select class="form-control select2" id="department" name="department" required
                                style="width: 100%;">
                                <option value="IT" selected="selected">IT</option>
                                <option value="CSE">CSE</option>
                                <option value="ECE">ECE</option>
                                <option value="MECH">MECH</option>
                                <option value="ENGLISH">ENGLISH</option>
                                <option value="MATHS">MATHS</option>
                                <option value="EEE">EEE</option>
                                <option value="CDC">CDC</option>
                                <option value="OTHERS">OTHERS</option>

                              </select>
                            </div>
                            <label for="inputEmail" class="col-sm-2 col-form-label">Position</label>
                            <div class="col-sm-4">
                              <select class="form-control select2" id="position" name="position" required
                                style="width: 100%;">
                                <option value="Assistant Professor" selected="selected">Assistant Professor</option>
                                <option value="HOD">HOD</option>

                                <option value="Professor">Professor</option>
                                <option value="Lab Assistant">Lab Assistant</option>

                              </select>
                            </div>
                          </div>

                          <div class="form-group row">
                            <label for="inputExperience" class="col-sm-2 col-form-label">Email</label>

                            <div class="col-sm-6">
                              <input type="email" class="form-control" name="email" required id="inputEmail"
                                value=<%=data.email %>>
                            </div>
                          </div>
                      </div>

                      <div class="form-group row">
                        <label for="date-picker" class="col-sm-2 col-form-label">DOB</label>
                        <div class="col-sm-4">
                          <!--<%=data.dob.getDate()+'-'+datemonth +'-'+ data.dob.getFullYear() %>-->
                          <input type="text" class="form-control" name="dob" id="date-picker" required
                            value="<%=data.dob.getFullYear() +'-'+ datemonth +'-'+data.dob.getDate()%> ">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="inputExperience" class="col-sm-2 col-form-label">Address</label>

                        <div class="col-sm-6">
                          <textarea class="form-control" id="inputExperience" required name="address"
                            placeholder="Enter your address"><%=data.address%></textarea>
                        </div>
                      </div>
                    </div>
                    <div class="form-group row">
                      <label for="inputExperience" class="col-sm-2 col-form-label">Mobile No.</label>

                      <div class="col-sm-4">
                        <input type="text" class="form-control" name="mobno" required id="inputMobilno"
                          value=<%=data.mobileno %>>
                      </div>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="inputCity" class="col-sm-2 col-form-label">City</label>
                    <div class="col-sm-4">
                      <input type="text" name="city" class="form-control" required id="inputCity" value=<%=data.city %>>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="inputState" class="col-sm-2 col-form-label">State</label>
                    <div class="col-sm-4">
                      <input type="text" name="state" class="form-control" required id="inputState"
                        placeholder="Tamilnadu" value=<%=data.state %>>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="inputZip" class="col-sm-2 col-form-label">Pincode</label>
                    <div class="col-sm-3">
                      <input type="text" name="pincode" class="form-control" required id="inputZip"
                        value=<%=data.pincode %>>
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                      <button type="submit" class="btn btn-danger">Save</button>
                    </div>
                  </div>
                  <% })%>
                    <% } %>
                      </form>
                </div>
                <!-- /.tab-pane -->
              </div>
              <!-- /.tab-content -->
            </div><!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->


